{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <div class='nestle_content'>
        {{ content.field_items.0 }}
      </div>
      <div class='nestle_content'>
        {{ content.field_items.1 }}
      </div>
      <div class='nestle_content'>
        {{ content.field_items.2 }}
      </div>

    {% endblock %}
  </div>
{% endblock paragraph %}
